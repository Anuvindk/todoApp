<section class="toDoContainer">
    <% dataInDB.forEach((data,index)=>{ %>
        <div class="toDoCard">
            <div class="cardHeader">
                <input type="text" 
                        name="todoDate" 
                value="<%= new Date(data.todoDate).toLocaleString('en-IN', { 
                day: '2-digit', 
                month: '2-digit', 
                year: 'numeric', 
                hour: '2-digit', 
                minute: '2-digit', 
                hour12: true 
            }) %>" 
                    disabled />

            </div>
            <div class="cardBody">
                <p><%= data.todoEntry %></p>
            </div>
            <div class="cardFooter">
                <a href="/edit/<%= data._id %>"><button class="card-btn">Edit</button></a>
                <a href="/delete/<%= data._id %>"><button class="card-btn">Delete</button></a>
            </div>
        </div>
    <% }) %>
</section>